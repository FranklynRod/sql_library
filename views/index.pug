extends layout.pug

block content
  link(href='../public/stylesheets/style.css' rel='stylesheet')
  h1 Books
  p 
    a.button(href='/books/new') Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each value in books 
        tr 
          td
            a(href='/books/'+ value.id)= value.title
          td=value.author
          td=value.genre
          td=value.year