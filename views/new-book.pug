extends layout.pug 

block content
  h1 New Book

  form(method='POST' action='/books/new')
    if errors
      h2.error Ooooops! 
      ul 
        each error in errors 
          li #{error.message}
    p
      label(for='title') Title:
      input#title(type='text', placeholder='Title' name='title' value=book.title)
    p
      label(for='author') Author:
      input#author(type='text', placeholder='Author' name='author' value=book.author)
    p
      label(for='genre') Genre:
      input#genre(type='text', placeholder='Genre' name='genre' value=book.genre)
    p
      label(for='year') Year:
      input#year(type='text' placeholder='Year' name='year' value=book.year)
    
    p
      input(type='submit' value='Create New Book')
    p
      a.button(href='/') Cancel