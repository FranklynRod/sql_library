extends layout

block content
  h1 New Book

form(method='POST' action='/books/:id')
          p
            label(for='title') Title:
            input#title(type='text', placeholder='Title' name='title')
          p
            label(for='author') Author:
            input#author(type='text', placeholder='Author' name='author')
          p
            label(for='genre') Genre:
            input#genre(type='text', placeholder='Genre' name='genre')
          p
            label(for='year') Year:
            input#year(type='text' placeholder='Year' name='year')
          
  p 
    a.button(href='/books/:id') Update Book 
  p 
    a.button(href='/books/new') Cancel
  p 
    a.button(href='/books/:id/delete') Delete Book